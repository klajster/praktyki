<h1> Edytuj wypowiedz </h1>
</br>
<%= link_to "strona główna", root_path %>

</br>
<%= form_for(@statement) do |f| %>
  <% @statement.errors.full_messages.each do |err| %> 
    <li><%= err %></li> 
  <% end %>
  <%= f.label "Twoja wypowiedz" %>
  <%= f.text_field :post %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Save me!" %>
<% end %>
